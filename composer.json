{
    "name": "prooph/event-sourcing",
    "description": "PHP EventSourcing library",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        }
    ],
    "keywords": [
        "EventSourcing",
        "DDD",
        "prooph"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jonsa/ph-php-cs-fixer-config.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jonsa/ph-common.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jonsa/ph-event-store.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jonsa/ph-snapshot-store.git"
        }
    ],
    "require": {
        "php": "^5.6",
        "prooph/event-store" : "5.6.x-dev"
    },
    "require-dev": {
        "psr/container": "^1.0",
        "sandrokeil/interop-config": "^1.0.0",
        "phpunit/phpunit": "^5.0",
        "prooph/snapshot-store": "5.6.x-dev",
        "prooph/php-cs-fixer-config": "5.6.x-dev",
        "phpspec/prophecy": "^1.7",
        "satooshi/php-coveralls": "^1.0",
        "prooph/bookdown-template": "^0.2.3",
        "malukenho/docheader": "^0.1.4"
    },
    "suggest": {
        "prooph/snapshot-store": "For usage with snapshots"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventSourcing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventSourcing\\": "tests/",
            "ProophTest\\EventStore\\": "vendor/prooph/event-store/tests/"
        }
    },
    "config": {
        "preferred-install": {
            "prooph/*": "source"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit"
    }
}
